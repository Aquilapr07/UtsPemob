<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E90FF"
    tools:context=".forgot">


    <TextView
        android:id="@+id/myInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textSize="35dp"
        android:textAlignment="center"
        android:textColor="#1E90FF"
        android:textStyle="bold"
        android:background="@color/white"
        android:drawableLeft="@drawable/baseline_arrow_back_24"
        android:drawableRight="@drawable/baseline_gps_fixed_24"
        />

    <EditText
        android:id="@+id/etFN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="User Name"
        android:textColorHint="@color/white"
        android:padding="28dp"
        android:drawablePadding="20dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/etEMAIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:textColorHint="@color/white"
        android:padding="28dp"
        android:drawablePadding="20dp"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/etNP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="No Phone"
        android:textColorHint="@color/white"
        android:padding="28dp"
        android:drawablePadding="20dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/PW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter Verify Code"
        android:textColorHint="@color/white"
        android:padding="28dp"
        android:drawablePadding="20dp"
        android:textColor="@color/white"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend Verification Code"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>



    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:onClick="verify"
        tools:ignore="OnClick"
        android:padding="15dp"
        android:textColor="#1E90FF"
        android:textSize="20dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="120dp"
        android:drawableLeft="@drawable/baseline_save_24"/>






</LinearLayout>