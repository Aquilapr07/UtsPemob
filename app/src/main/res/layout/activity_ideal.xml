<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".forgot">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cara mempertahankan Berat Badan Ideal"
        android:textColor="#1E90FF"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="32dp"
        android:textAlignment="center"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/ideal"/>

    <TextView
        android:layout_width="134dp"
        android:layout_height="64dp"
        android:layout_marginLeft="25dp"
        android:text="Tetap Aktif Berolahraga"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="257dp"
        android:layout_height="270dp"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="-300dp"
        android:src="@drawable/makanan" />

    <TextView
        android:layout_width="134dp"
        android:layout_height="64dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="-40dp"
        android:text="Mengatur Pola Makan "
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="-20dp"
        android:src="@drawable/jam"/>

    <TextView
        android:layout_width="134dp"
        android:layout_height="64dp"
        android:layout_marginLeft="25dp"
        android:text="Mengatur Jam Makan"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />


    <ImageView
    android:layout_width="200dp"
    android:layout_height="270dp"
    android:layout_marginLeft="195dp"
    android:layout_marginTop="-300dp"
    android:src="@drawable/timbangan" />

    <TextView
        android:layout_width="187dp"
        android:layout_height="64dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="-40dp"
        android:text="Maintenance Berat Badan"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />



</LinearLayout>